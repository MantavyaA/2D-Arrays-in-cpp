#include <iostream>
using namespace std;

int main() {
    int r, c;
    cout << "Enter number of rows: ";
    cin >> r;
    cout << "Enter number of columns: ";
    cin >> c;

    int arr[r][c];
    cout << "Enter elements of the matrix:" << endl;
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            cin >> arr[i][j];
        }
    }

    if (r != c) {
        cout << "Diagonal sum is only possible for square matrices." << endl;
        return 0;
    }

    int diagSum = 0;
    for (int i = 0; i < r; i++) {
        diagSum += arr[i][i];
    }

    cout << "Sum of diagonal elements: " << diagSum << endl;
    return 0;
}


OUTPUT :
Enter number of rows: 3
Enter number of columns: 3
Enter elements of the matrix:
1 2 3
4 5 6
7 8 9
Sum of  diagonal elements: 15


